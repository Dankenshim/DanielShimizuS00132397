@using s00132397DanielShimizu.Models
@model s00132397DanielShimizu.Models.Film

<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4>Edit @Model.Title</h4>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Film</legend>
                @Html.HiddenFor(model => model.FilmId)
                <div class="row">
                    <div class="form-group col-xs-4">
                        @Html.LabelFor(model => model.Title)
                        @Html.TextBoxFor(model => model.Title,
                                new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                    <div class="form-group col-xs-4">
                        @Html.LabelFor(model => model.ReleaseDate)
                        <div class='input-group date' id='datetimepicker1'>
                            <input type='text' name="ReleaseDate" value="@Model.ReleaseDate.ToShortDateString()" class="form-control" data-date-format="DD/MM/YYYY" />
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                        @Html.ValidationMessageFor(model => model.ReleaseDate)
                    </div>
         
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary"
                           value="Save" />
                </div>
            </fieldset>
        }
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
    </div>
</div>
@section Scripts {
    <script>
        $(function () {
            $('#datetimepicker1').datetimepicker({ pickTime: false });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
