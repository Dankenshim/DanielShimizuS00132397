@model IEnumerable<s00132397DanielShimizu.Models.Actor>

@if (Model.Any())
{
    <table id="ActorTable" class="table table-condensed table-striped"
           style="table-layout:fixed; margin-bottom: 0px">
        <tr>
            <th colspan="3">
                @ViewBag.FilmName
            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <span class="badge">@item.Sex.ToString().Substring(0, 1)</span>
                       
                    </td>                  
                </tr>
            }
        } 
    </table>
}
else
{<div><strong><mark>No Actors Added for @ViewBag.FilmName</mark></strong></div>}
